enum Gender {
  MALE
  FEMALE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  gender: Gender!
  phone: String! @unique
  sid: String! @unique
  major: String!
  github: String @unique
  username: String!
  password: String!
  isConfirmed: Boolean!
  isStaff: Boolean!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Volunteer {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  phone: String! @unique
  sid: String! @unique
  grade: String!
  college: String!
  major: String!
  application: Application @relation(link: TABLE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Application {
  id: ID! @id
  motive: String
  spec: String
  activity: String
  experience: String
  wannaMakeDesc: String
  wannaMakeImageUrl: String
  volunteer: Volunteer!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
