type User {
  id: ID! @id
  name: String!
  username: String!
  password: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Volunteer {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  phone: String! @unique
  sid: String! @unique
  grade: String!
  college: String!
  major: String!
  application: Application @relation(link: TABLE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Application {
  id: ID! @id
  motive: String
  spec: String
  activity: String
  experience: String
  wannaMakeDesc: String
  wannaMakeImage: [File!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type File {
  id: ID! @id
  url: String!
  application: Application! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
